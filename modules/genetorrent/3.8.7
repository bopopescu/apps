#%Module 1.0

set	app		genetorrent
set	version		3.8.7
set     modroot         $::env(MODIMAGE_PATH)/$app/$version

append-path	PATH		$modroot/bin
append-path	MANPATH		$modroot/share/man
append-path	CPATH		$modroot/include
append-path	LIBRARY_PATH	$modroot/lib
append-path	LIBRARY_PATH	$modroot/lib/GeneTorrent
append-path	LD_LIBRARY_PATH	$modroot/lib
append-path	LD_LIBRARY_PATH	$modroot/lib/GeneTorrent

setenv		GT_RESOURCE_PATH	$modroot/share/GeneTorrent

set-alias	gtdownload	"$modroot/bin/gtdownload -R $modroot/share/GeneTorrent"

conflict	$app
prereq		boost
prereq		xerces
prereq		xqilla
